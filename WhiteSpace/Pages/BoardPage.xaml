<Page x:Class="WhiteSpace.Pages.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Доска"
      Background="#F3F3F3">

    <Grid>
        <!-- Панель инструментов -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Content="✏ Карандаш" Click="Pen_Click"/>
            <Button Content="⬛ Прямоугольник" Click="Rect_Click"/>
            <Button Content="🔵 Круг" Click="Ellipse_Click"/>
            <Button Content="🅣 Текст" Click="Text_Click"/>
        </StackPanel>

        <!-- Область доски -->
        <Canvas x:Name="BoardCanvas"
                Background="White"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
    </Grid>
</Page>
