<Page x:Class="WhiteSpace.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход"
      MinWidth="1280"
      MinHeight="800">

    <Grid Background="#80000000">

        <Grid Width="700" Height="450" Background="White"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Войти"
                       FontSize="36"
                       FontWeight="Bold"
                       Margin="60,50,60,30"/>

            <StackPanel Grid.Row="1" Margin="60,0,60,60">

                <Grid Margin="0,0,0,30">
                    <TextBox x:Name="EmailBox"
                             FontSize="18"
                             Height="40"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="Email"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="18"
                                 Height="40"
                                 Padding="5,8,5,0"
                                 BorderThickness="0,0,0,1"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Пароль"
                               FontSize="18"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"/>
                </Grid>

                <TextBlock Margin="0,0,0,40">
                    <Run Text="У вас нет аккаунта? "/>
                    <Hyperlink x:Name="RegisterLink"
                               Foreground="Black"
                               TextDecorations="Underline"
                               Click="RegisterLink_Click">
                        Зарегистрируйтесь
                    </Hyperlink>
                </TextBlock>

                <Button Content="Войти"
                        Height="50"
                        Width="200"
                        FontSize="18"
                        BorderThickness="2"
                        Background="White"
                        HorizontalAlignment="Right"
                        Click="Login_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
