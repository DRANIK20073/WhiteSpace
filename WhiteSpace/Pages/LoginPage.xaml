<Page x:Class="WhiteSpace.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход"
      MinWidth="1280"
      MinHeight="800">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Width="700" Height="550" Background="White"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="WHITESPACE"
                       FontSize="36"
                       FontWeight="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,50,0,20"/>

            <!-- Форма входа -->
            <StackPanel Grid.Row="1" Margin="60,0,60,60">
                <!-- Поле для Email -->
                <Grid Margin="0,0,0,30">
                    <TextBox x:Name="EmailBox"
                             FontSize="18"
                             Height="40"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Email"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Поле для пароля -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="18"
                                 Height="40"
                                 Padding="5,8,5,0"
                                 BorderThickness="0,0,0,1"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Пароль"
                               FontSize="18"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Чекбокс для запоминания -->
                <CheckBox x:Name="RememberMeCheckBox"
                          Content="Оставаться в системе"
                          Margin="0,0,0,20"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock Margin="0,10,0,40">
                    <Run Text="У вас нет аккаунта? "/>
                    <Hyperlink x:Name="RegisterLink"
                               Foreground="Black"
                               TextDecorations="Underline"
                               Click="RegisterLink_Click">
                        Зарегистрируйтесь
                    </Hyperlink>
                </TextBlock>

                <!-- Кнопка Войти -->
                <Button Content="Войти"
                        Height="50"
                        FontSize="18"
                        BorderThickness="2"
                        Background="White"
                        HorizontalAlignment="Stretch"
                        Click="Login_Click"/>

                <!-- Кнопка Google -->
                <Button Content="Продолжить с Google"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    FontSize="18"
                    Height="50"
                    HorizontalAlignment="Stretch"
                    Click="GoogleLogin_Click"
                    Margin="60,20,60,30"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
