<Page x:Class="WhiteSpace.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Вход"
      Background="#333333">

    <Page.Resources>
        <!-- Стиль для кнопки входа с анимацией цвета -->
        <Style x:Key="AnimatedLoginButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Анимация при наведении - меняем цвет -->
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#666666" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.03" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.03" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Анимация при убирании мыши -->
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#333333" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Анимация при нажатии - полностью меняем цвет -->
                            <EventTrigger RoutedEvent="MouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#000000" Duration="0:0:0.1"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="0.97" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="0.97" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Анимация при отпускании -->
                            <EventTrigger RoutedEvent="MouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#666666" Duration="0:0:0.1"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.03" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.03" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки Google с анимацией цвета -->
        <Style x:Key="AnimatedGoogleButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="10"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Анимация при наведении - меняем цвет фона -->
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#F0F0F0" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.02" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.02" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Анимация при убирании мыши -->
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Анимация при нажатии - полностью меняем цвет -->
                            <EventTrigger RoutedEvent="MouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Background.Color"
                                            To="#E0E0E0" Duration="0:0:0.1"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="0.98" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="0.98" Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Адаптивный контейнер -->
    <Viewbox Stretch="Uniform" MaxWidth="800" MaxHeight="700">
        <Grid Width="700" Height="600">
            <!-- Карточка с тенью -->
            <Border Background="#FFFFFF"
                    CornerRadius="16"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Width="450">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      Opacity="0.1" 
                                      ShadowDepth="4"
                                      Color="#000000"/>
                </Border.Effect>

                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок без иконки -->
                    <StackPanel Grid.Row="0" Margin="0,30,0,30">
                        <TextBlock Text="WHITESPACE"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="#000000"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Войдите в свою учетную запись"
                                   FontSize="16"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Форма входа -->
                    <StackPanel Grid.Row="1" Margin="60,0,60,40">

                        <!-- Email поле -->
                        <ui:TextBox x:Name="EmailBox"
                                    PlaceholderText="Email"
                                    Icon="Mail20"
                                    FontSize="16"
                                    Margin="0,0,0,20"
                                    ClearButtonEnabled="True"
                                    KeyDown="TextBox_KeyDown"/>

                        <!-- Поле для пароля -->
                        <ui:PasswordBox x:Name="PasswordBox"
                                        PlaceholderText="Пароль"
                                        Icon="LockClosed20"
                                        FontSize="16"
                                        Margin="0,0,0,20"
                                        KeyDown="PasswordBox_KeyDown"/>

                        <!-- Чекбокс и забытый пароль -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="RememberMeCheckBox"
                                      Content="Оставаться в системе"
                                      Foreground="#333333"/>

                            <Button Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="ForgotPassword_Click">
                                <TextBlock Text="Забыли пароль?" 
                                           FontSize="14"
                                           Foreground="#666666"
                                           TextDecorations="Underline"/>
                            </Button>
                        </Grid>

                        <!-- Кнопка входа -->
                        <Button Content="Войти"
                                Style="{StaticResource AnimatedLoginButton}"
                                Height="45"
                                FontSize="18"
                                Background="#333333"
                                Foreground="#FFFFFF"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,0"
                                Click="Login_Click"/>

                        <!-- Разделитель -->
                        <Grid Margin="0,15,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Height="1" 
                                    Background="#CCCCCC"
                                    VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" 
                                       Text="или" 
                                       Margin="10,0" 
                                       Foreground="#999999"/>

                            <Border Grid.Column="2" 
                                    Height="1" 
                                    Background="#CCCCCC"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Кнопка Google -->
                        <Button Style="{StaticResource AnimatedGoogleButton}"
                                Height="45"
                                FontSize="16"
                                Margin="0,0,0,25"
                                Click="GoogleLogin_Click"
                                Background="#FFFFFF"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                Cursor="Hand">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="https://www.google.com/favicon.ico" 
                                           Width="20" 
                                           Height="20" 
                                           Margin="0,0,10,0"/>
                                    <TextBlock Text="Продолжить с Google" 
                                               Foreground="#333333"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Ссылка на регистрацию -->
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="#666666">
                            <Run Text="У вас нет аккаунта? "/>
                            <Hyperlink x:Name="RegisterLink"
                                       Click="RegisterLink_Click"
                                       Foreground="#333333">
                                <Run Text="Зарегистрируйтесь" 
                                     FontWeight="SemiBold"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Page>