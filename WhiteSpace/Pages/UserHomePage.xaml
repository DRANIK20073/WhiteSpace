<Page x:Class="WhiteSpace.Pages.UserHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница пользователя"
      Background="#F3F3F3">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Приветствие -->
        <TextBlock Text="{Binding UserGreeting}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,20">

            <Button Content="➕ Создать доску"
                    Width="180"
                    Height="40"/>

            <Button Content="🔗 Подключиться по коду"
                    Width="220"
                    Height="40"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Пока заглушка под доски -->
        <Border Grid.Row="2"
                Background="White"
                Padding="15"
                CornerRadius="6">
            <TextBlock Text="Здесь будет список ваших досок"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
