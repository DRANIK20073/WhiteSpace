<Page x:Class="WhiteSpace.Pages.UserHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WhiteSpace.Pages"
      Title="Главная"
      Background="#FFFFFF"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Стиль для кнопок со скругленными углами (черная) -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555555"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок с белым фоном и изменением цвета -->
        <Style x:Key="AnimatedWhiteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="BorderBrush" Value="#EDEBE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#E6E6E6" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#F3F2F1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D9D9D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки выхода (с красноватым оттенком) -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource AnimatedWhiteButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#FFE6E6" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#F3F2F1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFD9D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для карточек досок (только изменение цвета) -->
        <Style x:Key="BoardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#E8E8E8" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="Background.Color"
                                    To="#F3F2F1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Левая боковая панель -->
            <ColumnDefinition Width="260"/>
            <!-- Основной контент -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая боковая панель -->
        <Border Grid.Column="0"
                Background="#FAF9F8"
                BorderBrush="#EDEBE9"
                BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="0,20,0,20">

                    <!-- Заголовок с логотипом (только WHITESPACE) -->
                    <StackPanel Margin="20,0,20,20">
                        <TextBlock Text="WHITESPACE"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#FFFFFF">
            <StackPanel Margin="40,40,40,40">

                <!-- Заголовок с приветствием (динамическое) -->
                <TextBlock x:Name="GreetingTextBlock"
                           Text="{Binding UserGreeting}"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1A1A1A"
                           Margin="0,0,0,30"/>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,40">

                    <!-- Кнопка Создать доску -->
                    <Button Width="180"
                            Height="44"
                            Background="#333333"
                            BorderThickness="0"
                            Style="{StaticResource RoundedButtonStyle}"
                            Cursor="Hand"
                            Click="CreateBoard_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="➕" 
                                       FontSize="18" 
                                       Margin="0,0,8,0"
                                       Foreground="White"/>
                            <TextBlock Text="Создать доску" 
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="White"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка Подключиться по коду -->
                    <Button Width="200"
                            Height="44"
                            Style="{StaticResource AnimatedWhiteButtonStyle}"
                            Margin="10,0,0,0"
                            Click="JoinByCode_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🔗" 
                                       FontSize="18" 
                                       Margin="0,0,8,0"
                                       Foreground="#1A1A1A"/>
                            <TextBlock Text="Подключиться по коду" 
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="#1A1A1A"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка Выход -->
                    <Button Width="100"
                            Height="44"
                            Style="{StaticResource LogoutButtonStyle}"
                            Margin="10,0,0,0"
                            Click="Logout_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🚪" 
                                       FontSize="18" 
                                       Margin="0,0,8,0"
                                       Foreground="#1A1A1A"/>
                            <TextBlock Text="Выход" 
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="#1A1A1A"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Секция: Мои доски -->
                <TextBlock Text="Мои доски"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1A1A1A"
                           Margin="0,0,0,16"/>

                <!-- Сетка досок -->
                <ItemsControl x:Name="BoardsItemsControl"
                              ItemsSource="{Binding Boards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource BoardCardStyle}"
                                    Width="240"
                                    Height="180">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Открыть доску"
                                                  CommandParameter="{Binding Id}"
                                                  Click="OpenBoard_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="📂" Margin="0,0,5,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Удалить доску"
                                                  CommandParameter="{Binding Id}"
                                                  Click="DeleteBoard_Click"
                                                  Foreground="#FF4444">
                                            <MenuItem.Icon>
                                                <TextBlock Text="❌" Margin="0,0,5,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CommandParameter="{Binding Id}"
                                        Click="OpenBoard_Click"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <TextBlock Text="📋"
                                                   FontSize="32" 
                                                   Margin="0,0,0,12"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1A1A1A"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"/>
                                        <TextBlock Text="Открыть доску"
                                                   FontSize="13"
                                                   Foreground="#605E5C"
                                                   Margin="0,8,0,0"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сообщение, если нет досок -->
                <TextBlock x:Name="NoBoardsTextBlock"
                           Text="У вас пока нет созданных досок"
                           FontSize="16"
                           Foreground="#605E5C"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,40"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>