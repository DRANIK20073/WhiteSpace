<Page x:Class="WhiteSpace.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация"
      MinHeight="800"
      MinWidth="1280">

    <Grid Width="auto" Height="auto" Background="#80000000">

        <Grid Background="#FFFFFF" Width="700" Height="450" Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Регистрация"
                       FontSize="36"
                       FontWeight="Bold"
                       Margin="60,50,60,30"/>

            <StackPanel Grid.Row="1" Margin="60,0,60,60">

                <!-- EMAIL -->
                <Grid Margin="0,0,0,30">
                    <TextBox x:Name="EmailBox"
                             FontSize="18"
                             Height="40"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="Email"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- ПАРОЛЬ -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="18"
                                 Height="40"
                                 Padding="5,8,5,0"
                                 BorderThickness="0,0,0,1"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Пароль"
                               FontSize="18"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Текст со ссылкой -->
                <TextBlock Margin="0,0,0,40">
                    <Run Text="Уже есть аккаунт? "/>
                    <Hyperlink Name="LoginLink"
                               TextDecorations="Underline"
                               Foreground="Black"
                               NavigateUri="LoginPage.xaml">
                        Войти
                    </Hyperlink>
                </TextBlock>

                <!-- Кнопка -->
                <Button Content="Зарегистрироваться"
                        Click="Register_Click"
                        Height="50"
                        FontSize="18"
                        BorderThickness="2"
                        Background="White"
                        Width="260"
                        HorizontalAlignment="Right"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
