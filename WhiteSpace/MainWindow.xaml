<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Метки для каждого поля -->
        <TextBlock Text=" Новое Имя пользователя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="newUsernameTextBox" Width="200" Height="25" Margin="173,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBlock Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="120,40,10,0" />

        <TextBlock Text="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="120,70,10,0" />

        <!-- Кнопки для регистрации, входа и получения пользователя -->
        <Button x:Name="RegisterButton" Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,100,0,0" Click="RegisterButton_Click"/>
        <Button x:Name="SignInButton" Content="Вход" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="100,100,0,0" Click="SignInButton_Click"/>
        <Button x:Name="GetUserButton" Content="Получить пользователя" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="30" Margin="190,100,0,0" Click="GetUserButton_Click"/>
        <Button x:Name="UpdateUsernameButton" Content="Сменить имя пользователя" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="30" Margin="340,100,0,0" Click="UpdateUsernameButton_Click"/>
    </Grid>
</Window>
